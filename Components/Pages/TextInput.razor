@page "/text"
@rendermode InteractiveServer

<PageTitle>Text</PageTitle>

<p>@message</p>
<input type="text" @onkeypress="InputChanged" />

@code {
    private string message = "";

    private void InputChanged(KeyboardEventArgs e)
    {
        if (e.Code == "Enter")
        {
            //TODO: submit? refactor to html form?
            return;
        }

        if (e.Code == "Space")
        {
            message += " ";
            return;
        }

        var input = e.Code.Split("Key");
        //message = (string)e.Code;
        message += (string)input[1];
    }
}